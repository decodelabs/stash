{
    "name": "decodelabs/stash",
    "description": "PSR6 / PSR16 cache handler",
    "type": "library",
    "keywords": [ "cache" ],
    "license": "MIT",
    "authors": [ {
            "name": "Tom Wright",
            "email": "tom@inflatablecookie.com"
        } ],
    "require": {
        "php": "^8.4",

        "decodelabs/archetype": "^0.4",
        "decodelabs/atlas": "^0.14",
        "decodelabs/coercion": "^0.3.5",
        "decodelabs/dictum": "^0.7",
        "decodelabs/exceptional": "^0.6.3",
        "decodelabs/kingdom": "^0.1",
        "decodelabs/monarch": "^0.2",

        "psr/cache": "^3.0",
        "psr/simple-cache": "^3.0",
        "nesbot/carbon": "^3"
    },
    "require-dev": {
        "decodelabs/commandment": "^0.3.0",
        "decodelabs/dovetail": "^0.3",
        "decodelabs/genesis": "^0.14",
        "decodelabs/phpstan-decodelabs": "^0.7",

        "ext-memcached": "^3.2",
        "ext-apcu": "^5.1",
        "ext-redis": "^5.3|^6",
        "predis/predis": "^2.4"
    },
    "conflict": {
        "decodelabs/dovetail": "<0.3",
        "decodelabs/genesis": "<0.14"
    },
    "suggest": {
        "decodelabs/dovetail": "For dovetail config integration",

        "ext-memcached": "For memcached support",
        "ext-apcu": "For APCu support",
        "ext-redis": "For redis support",
        "predis/predis": "For redis support"
    },
    "provide": {
        "psr/cache-implementation": "3.0",
        "psr/simple-cache-implementation": "3.0"
    },
    "autoload": {
        "psr-4": {
            "DecodeLabs\\Stash\\": "src/Stash/",
            "DecodeLabs\\Genesis\\": "src/Genesis/"
        },
        "classmap": [
            "src/Commandment/",
            "src/Dovetail/",
            "src/Stash.php"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "0.7.x-dev"
        }
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true,
            "decodelabs/genesis": true
        }
    }
}
